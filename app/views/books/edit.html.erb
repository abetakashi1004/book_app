<body>
  <div class="edit">

	<h2>Editing Book</h2>

	<%= form_for(@book) do |f| %>
	<h4>Title</h4>
	<%= f.text_field :title %>
	<h4>Body</h4>
	<%= f.text_area :body %>

	<div class="botan"><%= f.submit 'Update Book'%></div>
	<%= link_to "Show",book_path(@book.id) %>
	<p class="block2">|</p>
	<%= link_to "Back",books_path %>
	<% end %>

  </div>
</body>